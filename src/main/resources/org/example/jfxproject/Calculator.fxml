<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.jfxproject.CalcController">
   <children>
      <Button fx:id="Scene2Switch" layoutX="23.0" layoutY="38.0" mnemonicParsing="false" onAction="#SwitchScene2" text="&lt;- Back to Scene2" />
      <Label layoutX="204.0" layoutY="31.0" text="Mini Calculator" textAlignment="CENTER" underline="true">
         <font>
            <Font size="28.0" />
         </font>
      </Label>
      <TextField fx:id="field" layoutX="165.0" layoutY="123.0" prefHeight="53.0" prefWidth="282.0" />
      <Button fx:id="plus" layoutX="178.0" layoutY="200.0" mnemonicParsing="false" onAction="#Add" text="+">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <Button fx:id="minus" layoutX="245.0" layoutY="200.0" mnemonicParsing="false" onAction="#Minus" text="-">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <Button fx:id="divide" layoutX="313.0" layoutY="200.0" mnemonicParsing="false" onAction="#Divide" text="/">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <Button fx:id="multiply" layoutX="386.0" layoutY="200.0" mnemonicParsing="false" onAction="#Multiply" text="*">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <Label fx:id="ErrorText" alignment="CENTER" contentDisplay="CENTER" layoutX="176.0" layoutY="251.0" prefHeight="40.0" prefWidth="265.0" text=" " textFill="RED">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="val" alignment="CENTER" layoutX="42.0" layoutY="124.0" prefHeight="53.0" prefWidth="113.0" text=" " textFill="#727070">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <Button fx:id="equal" layoutX="467.0" layoutY="130.0" mnemonicParsing="false" onAction="#Equal" text="=">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
